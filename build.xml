  <target name='core' depends='init, scala-init' extensionOf='java-only' description='Builds the core of ADE.'>
    <build-scala package.dir='${core.dir}'/>
    <build-java package.dir='${core.dir}'/>
  </target>
  <target name='dshafer' depends='init, scala-init, core'
          extensionOf='java-only' 
          description='Builds dshafer frame code'>
    <build-scala package.dir='com/dshafer' package.excludes='com/dshafer/**/**Test.scala'/>
    <build-java package.dir='com/dshafer'/>
  </target>

  <target name='dshafer-test' depends='scala-init, init, core,
                                     customTasks, dshafer' extensionOf='test'
          description='Builds some stuff that needs TODO: document
                       me'>
    <build-scala package.dir='com/dshafer/' classpath='scalatest.classpath'/>
    <build-java package.dir='com/dshafer'/>
    <test-scala package.dir='com/dshafer' package.dir.dot='com.dshafer'/>
  </target>
